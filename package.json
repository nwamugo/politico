{
  "name": "politico",
  "version": "1.0.0",
  "description": "A web app that enables citizens to give their mandate to politicians running for different government offices while building trust in the process through transparency",
  "main": "app.js",
  "engines": {
    "node": "11.6.0"
  },
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "scripts": {
    "dev": "set NODE_ENV=development && nodemon --exec babel-node server/app.js --presets airbnb",
    "postinstall": "babel server --out-dir dist --presets airbnb",
    "start": "set NODE_ENV=production && node dist/app.js",
    "lint": "./node_modules/.bin/eslint server",
    "test": "cross-env NODE_ENV=test nyc mocha --recursive server/test --exit",
    "test-watch": "nodemon --exec \"npm test\"",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nwamugo/politico.git"
  },
  "author": "UGOJI Duziem",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nwamugo/politico/issues"
  },
  "homepage": "https://github.com/nwamugo/politico#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-istanbul": "^5.1.0",
    "babel-preset-airbnb": "^3.2.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.2",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.15.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.9",
    "nyc": "^13.1.0",
    "rewire": "^4.0.1",
    "sinon": "^7.2.3",
    "sinon-chai": "^3.3.0",
    "supertest": "^3.4.2"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cross-env": "^5.2.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "jsonwebtoken": "^8.4.0",
    "make-runnable": "^1.3.6",
    "moment": "^2.24.0",
    "pg": "^7.8.0",
    "uuid": "^3.3.2"
  }
}
